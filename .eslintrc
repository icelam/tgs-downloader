{
  "env":{
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "import/extensions": ["error", {
      "js": "always",
    }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "no-plusplus": ["off"]
  }
}
